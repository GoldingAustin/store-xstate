{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "../core/react/types",
    "emitDeclarationOnly": true,
    "declaration": true,
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "typeRoots": ["../core/react/types"],
    "paths": {
      "legend-xstate": ["../../core"]
    }
  },
  "exclude": ["./types"],
  "include": ["src"]
}
